{{> header notHome=true}}
<div id="account">
    <div class="container">
        <div class="row">
            <div class="col-10 offset-1">
                <div class="row">
                    <div class="col s12 m6">
                        <div id="accountCard" class="card">
                            <div class="card-content white-text purple darken-3">
                                <span class="card-title">Account Details</span>
                            </div>
                            <div class="card-action white">
                                <div class="row">
                                    <div class="col-6 s12">
                                        {{!-- First Name --}}
                                        <div class="row">
                                            <div class="col s12">
                                                <p><strong>First Name</strong>: {{account.firstName}}</p>
                                            </div>
                                        </div>
                                        {{!-- Last Name --}}
                                        <div class="row">
                                            <div class="col s12">
                                                <p><strong>Last Name</strong>: {{account.lastName}}</p>
                                            </div>
                                        </div>
                                        {{!-- Username --}}
                                        <div class="row">
                                            <div class="col s12">
                                                <p><strong>Username</strong>: {{account.userName}}</p>
                                            </div>
                                        </div>
                                        {{!-- Email --}}
                                        <div class="row">
                                            <div class="col s12">
                                                <p><strong>Email</strong>: {{account.email}}</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-6 s12 center" style="border-left:1px solid grey;">

                                        <img src="{{account.userImg}}" alt="Profile Picture"
                                            style="width:200px; height:200px; margin:0 auto;">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div id="postContainer">
                        {{>posts}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>